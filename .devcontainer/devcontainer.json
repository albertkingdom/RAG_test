{
  "name": "Python Dev (Docker)",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/app",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.suggest.enabled": true,
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        }
      },
      "extensions": [
        "ms-python.python",
        "google.geminicodeassist"
      ]
    }
  }
}